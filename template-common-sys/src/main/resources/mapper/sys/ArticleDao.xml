<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.vigekoo.dao.ArticleDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.vigekoo.entity.Article" id="articleMap">
        <result property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="image" column="image"/>
        <result property="content" column="content"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

	<select id="queryObject" resultType="com.vigekoo.entity.Article">
		select * from article where id = #{value}
	</select>

	<select id="queryList" resultType="com.vigekoo.entity.Article">
		select * from article
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from article 
	</select>
	 
	<insert id="save" parameterType="com.vigekoo.entity.Article" useGeneratedKeys="true" keyProperty="id">
		insert into article
		(
			`title`, 
			`image`, 
			`content`, 
			`create_time`, 
			`update_time`
		)
		values
		(
			#{title}, 
			#{image}, 
			#{content}, 
			#{createTime}, 
			#{updateTime}
		)
	</insert>
	 
	<update id="update" parameterType="com.vigekoo.entity.Article">
		update article 
		<set>
			<if test="title != null">`title` = #{title}, </if>
			<if test="image != null">`image` = #{image}, </if>
			<if test="content != null">`content` = #{content}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="updateTime != null">`update_time` = #{updateTime}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from article where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from article where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>